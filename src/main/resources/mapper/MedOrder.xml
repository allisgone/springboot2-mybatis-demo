<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.winterchen.dao.MedOrderDao" >
    <sql id="BASE_TABLE">
    med_order
  </sql>
    <resultMap type="com.winterchen.model.MedOrderDomain" id="medOrderDomainMap">
        <result property="id" column="id"/>
        <result property="customerId" column="customer_id"/>
        <result property="status" column="status"/>
        <result property="socre" column="socre"/>
        <result property="createTime" column="create_time"/>
        <result property="remark" column="remark"/>
        <result property="orderName" column="order_name"/>
    </resultMap>

    <select id="sumCustomerSocre" parameterType="Long"  resultMap="float">
        select sum(socre) as total from <include refid="BASE_TABLE"/> where customer_id = #{0} and status = 1
    </select>
</mapper>